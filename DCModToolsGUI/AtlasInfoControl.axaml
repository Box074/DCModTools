<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="64"
             x:Class="DCModToolsGUI.AtlasInfoControl">
  <Grid Height="64" Background="GreenYellow" Name="grid">
    <Label HorizontalAlignment="Left" VerticalAlignment="Top" Margin="72, 0, 0, 0" Name="atlasName">##NAME##</Label>
    <Label HorizontalAlignment="Left" VerticalAlignment="Center" Margin="72, 0, 0, 0" FontSize="12" Name="atlasTileCount">#TEX COUNT#</Label>
    <Label HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 8, 8, 0" Name="atlasModified">Modified(GreenYellow)/Original</Label>
    <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="48" Name="btnEdit">Edit</Button>
    <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="Red" Margin="0, 0, 64, 0" Name="btnRestore">Restore</Button>
  </Grid>
</UserControl>
